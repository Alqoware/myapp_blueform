{
  "name": "My Custom API App",
  "version": "1.0",
  "description": "Receives webhook data and sends it to an API.",
  "type": "app",
  "authentication": {
    "type": "apiKey",
    "name": "API Key",
    "keyPlacement": "header",
    "keyParamName": "Authorization",
    "valueFormat": "Bearer {authentication.apiKey}"
  },

  "modules": [
    {
      "name": "Send Webhook Data",
      "description": "Takes webhook data (author, date, time) and sends it to the website API.",
      "type": "action",
"input": {
  "schema": {
    "type": "object",
    "properties": {
      "author": { "type": "string", "title": "Author", "minLength": 1, "default": "" },
      "date": { "type": "string", "title": "Date", "pattern": "^\\d{4}-\\d{2}-\\d{2}$", "default": "" },
      "time": { "type": "string", "title": "Time", "pattern": "^\\d{2}:\\d{2}$", "default": "" }
    },
    "required": ["author", "date", "time"]
  }


      },

      "output": {
        "schema": {
          "type": "object",
          "properties": {
            "status": { "type": "string", "description": "Success or error" },
            "message": { "type": "string", "description": "API response message" }
          }
        }
      },
"execute": {
  "url": "https://myapp-blueform.onrender.com/api/data",
  "method": "POST",
  "headers": {
    "Content-Type": "application/json",
    "Authorization": "Bearer {authentication.apiKey}"
  },
"body": {
  "body": "{ \"author\": \"{input.author}\", \"date\": \"{input.date}\", \"time\": \"{input.time}\" }"

},

	"response": {
		"output": "{{response.body}}"

	}
},


      "errorHandling": {
        "responses": [
          {
            "code": 400,
            "message": "400 Error: Check required parameters."
          },
          {
            "code": 401,
            "message": "401 Error: Invalid API Key."
          },
          {
            "code": 500,
            "message": "500 Error: Internal server error."
          }
        ],
        "default": "An unknown error occurred. Contact support."
      }
    }
  ]
}
